--Looking at sample of data
SELECT *
FROM subscriptions
LIMIT 10; 

--Viewing the range of months that data is provided
SELECT MIN(subscription_start), MAX(subscription_start)
FROM subscriptions;

--Creating a temporary table of 'months' and assigning date ranges
WITH months AS (
  SELECT
    '2017-01-01' AS first_day,
    '2017-01-31' AS last_day
  UNION
  SELECT
    '2017-02-01' AS first_day,
    '2017-02-28' AS last_day
  UNION
  SELECT
    '2017-03-01' AS first_day,
    '2017-03-31' AS last_day
),

--Creating a temporary table cross joining subscriptions and months
cross_join AS (
  SELECT *
  FROM subscriptions
  CROSS JOIN months
),

--Creating temporary table to find users that are active prior to the beggining of the month and users that cancel furing the month for segments 87 and 30
status AS (
  SELECT
    id,
    first_day AS month,
    CASE
      WHEN segment = 87
        AND (
          subscription_start < first_day
          ) THEN 1
      ELSE 0
    END AS is_active_87,
    CASE
      WHEN segment = 30
        AND (
          subscription_start < first_day
        ) THEN 1
      ELSE 0
    END AS is_active_30,
    CASE
      WHEN segment = 87
        AND subscription_end BETWEEN first_day AND last_day THEN 1
      ELSE 0
    END AS is_canceled_87,
    CASE
      WHEN segment = 30
        AND subscription_end BETWEEN first_day AND last_day THEN 1
      ELSE 0
    END AS is_canceled_30
  FROM cross_join
),

--Temporary table that provides the total active users and total cancelations for each segment, grouped by month
status_aggregate AS (
  SELECT
    SUM(is_active_87) AS sum_active_87,
    SUM(is_active_30) AS sum_active_30,
    SUM(is_canceled_87) AS sum_canceled_87,
    SUM(is_canceled_30) AS sum_canceled_30
  FROM status
  GROUP BY month
)

--Calculating the churn rates
SELECT
  1.0 * sum_canceled_87 / sum_active_87 AS churn_rate_87,
  1.0 * sum_canceled_30 / sum_active_30 AS churn_rate_30
FROM status_aggregate;

--From the calculations, it is determined that segment 30 has a significantly lower churn rate than segment 87
